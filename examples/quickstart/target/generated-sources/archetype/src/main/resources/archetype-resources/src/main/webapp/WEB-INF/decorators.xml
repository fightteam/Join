#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
	<!--不装饰的路径-->
    <excludes>
		<pattern>/resources/*</pattern>
        <pattern>/api/*</pattern>
	</excludes>
	
	<decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
	</decorator>

    <decorator name="admin-default" page="admin-default.jsp">
        <pattern>/admin/*</pattern>
    </decorator>
</decorators>
