<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">
    <description>系统资源设定,全局化配置设定</description>

    <util:properties id="dbProps" location="classpath:props/database.properties" />
    <util:properties id="logProps" location="classpath:props/log4j.properties" />
    <util:properties id="amProps" location="classpath:props/api.messages.properties" />
    <util:properties id="heProps" location="classpath:props/http.error.messages.properties" />
    <util:properties id="fProps" location="classpath:props/faith.properties" />
    <util:properties id="msgProps" location="classpath:props/messages.properties" />
    <util:properties id="mailProps" location="classpath:props/mail.properties" />

    <!--基于注解加载bean-->
    <context:component-scan base-package="org.excalibur.join.common,org.excalibur.join.api.web.common" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Component"/>
    </context:component-scan>

</beans>
